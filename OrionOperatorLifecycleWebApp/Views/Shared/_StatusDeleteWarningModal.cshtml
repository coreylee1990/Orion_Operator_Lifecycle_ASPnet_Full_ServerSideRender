@* Warning modal for status deletion with operator impact *@
<div class="modal fade" id="statusDeleteWarningModal" tabindex="-1" role="dialog" aria-labelledby="statusDeleteWarningModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content" style="border: 1px solid #dee2e6; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 4px;">
      <div class="modal-header" style="background-color: #dc3545; color: white; border: none; padding: 1.25rem 1.5rem; border-radius: 4px 4px 0 0;">
        <h5 class="modal-title d-flex align-items-center" id="statusDeleteWarningModalLabel" style="font-weight: 600; font-size: 1.15rem; margin: 0;">
          <i class="fas fa-exclamation-triangle me-2"></i>
          Warning: Operators Will Be Affected
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="statusDeleteWarningModalBody" style="padding: 1.5rem; background-color: #fafafa;">
        <!-- Content set by JS -->
      </div>
      <div class="modal-footer" style="background-color: #fff; border-top: 1px solid #dee2e6; padding: 1rem 1.5rem;">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 0.5rem 1.25rem;">
          <i class="fas fa-times me-1"></i> Cancel
        </button>
        <div>
          <button type="button" class="btn btn-warning me-2" id="statusDeleteWithReassignBtn" style="padding: 0.5rem 1.25rem;">
            <i class="fas fa-people-arrows me-1"></i> Reassign & Delete
          </button>
          <button type="button" class="btn btn-danger" id="statusDeleteWarningConfirmBtn" style="padding: 0.5rem 1.25rem;">
            <i class="fas fa-trash me-1"></i> Delete Without Reassigning
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
