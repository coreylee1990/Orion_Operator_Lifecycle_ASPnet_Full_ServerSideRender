@model List<OrionOperatorLifecycleWebApp.Models.StatusType>
@{
    ViewData["Title"] = "Status Management";
    var pizzaStatuses = ViewBag.PizzaStatuses as List<OrionOperatorLifecycleWebApp.Models.PizzaStatus>;
    var clients = ViewBag.Clients as List<OrionOperatorLifecycleWebApp.Models.Client>;
    var operators = ViewBag.Operators as List<OrionOperatorLifecycleWebApp.Models.Operator>;
    var divisions = Model
        .Where(s => !string.IsNullOrWhiteSpace(s.DivisionId))
        .Select(s => s.DivisionId)
        .Distinct()
        .OrderBy(d => d)
        .ToList();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="status-management-container">
    
    <div class="page-header">
        <div class="header-left">
            <i class="bi bi-diagram-3-fill header-icon"></i>
            <div>
                <h1>Status Management</h1>
                <p class="subtitle">Manage workflow statuses across all clients and divisions</p>
            </div>
        </div>
        <a asp-action="Create" class="btn-create">
            <i class="bi bi-plus-circle"></i> Create New Status
        </a>
    </div>

    <div class="filter-card">
        <h3><i class="bi bi-funnel"></i> Filters</h3>
        <form method="get" asp-action="Index" class="filter-form">
            <div class="filter-row">
                <div class="filter-item">
                    <label for="division">Client:</label>
                    <select name="division" id="division" class="form-control">
                        <option value="">All Clients</option>
                        @if (clients != null)
                        {
                            @foreach (var client in clients.OrderBy(c => c.Description))
                            {
                                var isSelected = ViewBag.SelectedDivision == client.Id;
                                <option value="@client.Id" selected="@isSelected">@client.Description</option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-item">
                    <label for="divisionFilter">Division ID:</label>
                    <select name="divisionFilter" id="divisionFilter" class="form-control">
                        <option value="">All Divisions</option>
                        @foreach (var divisionValue in divisions)
                        {
                            var isSelectedDivision = ViewBag.SelectedDivisionFilter == divisionValue;
                            <option value="@divisionValue" selected="@isSelectedDivision">@divisionValue</option>
                        }
                    </select>
                </div>

                <div class="filter-item checkbox-item">
                    <label>
                        <input type="checkbox" name="operators" value="true" @(ViewBag.SelectedOperators == true ? "checked" : "") />
                        <i class="bi bi-people"></i> Operators Only
                    </label>
                </div>

                <div class="filter-item checkbox-item">
                    <label>
                        <input type="checkbox" name="fleet" value="true" @(ViewBag.SelectedFleet == true ? "checked" : "") />
                        <i class="bi bi-truck"></i> Fleet Only
                    </label>
                </div>

                <div class="filter-item checkbox-item">
                    <label>
                        <input type="checkbox" name="providers" value="true" @(ViewBag.SelectedProviders == true ? "checked" : "") />
                        <i class="bi bi-person-badge"></i> Providers Only
                    </label>
                </div>

                <div class="filter-item checkbox-item">
                    <label>
                        <input type="checkbox" name="hasProvider" value="true" @(ViewBag.SelectedHasProvider == true ? "checked" : "") />
                        <i class="bi bi-building-check"></i> Has ClientId
                    </label>
                </div>

                <div class="filter-item">
                    <label for="isDeleted">Show:</label>
                    <select name="isDeleted" id="isDeleted" class="form-control">
                        <option value="">Active Only</option>
                        <option value="true" selected="@(ViewBag.SelectedIsDeleted == true)">Deleted Only</option>
                        <option value="false" selected="@(ViewBag.SelectedIsDeleted == false)">Active Only</option>
                    </select>
                </div>

                <div class="filter-actions">
                    <button type="submit" class="btn-apply">
                        <i class="bi bi-funnel-fill"></i> Apply
                    </button>
                    <a asp-action="Index" class="btn-clear">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <div class="table-container">
        <table class="status-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Status Name</th>
                    <th>Description</th>
                    <th>Client</th>
                    <th>Division ID</th>
                    <th>Order</th>
                    <th>Pizza Status</th>
                    <th>Age Alert (Days)</th>
                    <th>Operators</th>
                    <th class="text-center">Fleet</th>
                    <th class="text-center">Provider</th>
                    <th class="text-center">Active</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var status in Model)
                    {
                        var pizzaStatus = pizzaStatuses?.FirstOrDefault(ps => ps.Id == status.PizzaStatusId);
                        var providerName = clients?.FirstOrDefault(c => c.Id == status.DivisionId)?.Description ?? "-";
                        var isDeleted = status.IsDeleted == true;
                        var rowClass = isDeleted ? "deleted-row" : "";
                        
                        // Only count operators if this status is for operators (not Fleet and not Providers)
                        var isOperatorStatus = status.Fleet != true && status.Providers != true;
                        var operatorCountForStatus = isOperatorStatus ? (operators?.Count(o => o.DivisionId == status.DivisionId) ?? 0) : 0;

                        <tr class="@rowClass">
                            <td>@status.Id</td>
                            <td><strong>@status.Status</strong></td>
                            <td>@status.Description</td>
                            <td>@providerName</td>
                            <td>@status.DivisionId</td>
                            <td>@status.OrderId</td>
                            <td>
                                @if (pizzaStatus != null)
                                {
                                    <span class="badge badge-info">@pizzaStatus.Status</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(status.AgeDaysAlert))
                                {
                                    <span class="operator-count">@status.AgeDaysAlert</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (isOperatorStatus && operatorCountForStatus > 0)
                                {
                                    <span class="operator-count">@operatorCountForStatus</span>
                                }
                                else if (isOperatorStatus)
                                {
                                    <span class="text-muted">0</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (status.Fleet == true)
                                {
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (status.Providers == true)
                                {
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (!isDeleted)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Deleted</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="action-btns">
                                    @if (!isDeleted)
                                    {
                                        <a asp-action="Edit" asp-route-id="@status.Id" class="btn-action btn-edit" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@status.Id" class="btn-action btn-delete" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <form asp-action="Restore" asp-route-id="@status.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-action btn-restore" title="Restore">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </button>
                                        </form>
                                        <form asp-action="HardDelete" asp-route-id="@status.Id" method="post" style="display:inline;" 
                                              onsubmit="return confirm('Permanently delete? This cannot be undone.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-action btn-hard-delete" title="Hard Delete">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="empty-message">
                            <i class="bi bi-inbox"></i>
                            <p>No statuses found matching the selected filters.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="result-summary">
        <p>Showing <strong>@Model.Count</strong> status@(Model.Count != 1 ? "es" : "")</p>
    </div>
</div>

<style>
    * { box-sizing: border-box; }
    body { background: #f8fafc; margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif; }

    .status-management-container { max-width: 1600px; margin: 0 auto; padding: 30px 40px; }

    /* HEADER */
    .page-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 2px solid #e2e8f0; }
    .header-left { display: flex; align-items: center; gap: 15px; }
    .header-icon { font-size: 2.5rem; color: #60a5fa; }
    .page-header h1 { margin: 0; color: #1e293b; font-size: 2rem; font-weight: 700; }
    .subtitle { margin: 5px 0 0 0; color: #64748b; font-size: 0.95rem; }
    .btn-create { background: linear-gradient(135deg, #60a5fa 0%, #6366f1 100%); color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; font-weight: 600; display: inline-flex; align-items: center; gap: 8px; box-shadow: 0 2px 8px rgba(96, 165, 250, 0.3); transition: all 0.2s; }
    .btn-create:hover { transform: translateY(-2px); box-shadow: 0 4px 12px rgba(96, 165, 250, 0.4); color: white; }

    /* FILTER CARD */
    .filter-card { background: white; border-radius: 12px; padding: 25px; margin-bottom: 25px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); border: 1px solid #e2e8f0; }
    .filter-card h3 { margin: 0 0 20px 0; color: #1e293b; font-size: 1.1rem; font-weight: 600; display: flex; align-items: center; gap: 8px; }
    .filter-form { display: block; }
    .filter-row { display: flex; gap: 15px; align-items: end; flex-wrap: wrap; }
    .filter-item { flex: 1; min-width: 180px; }
    .filter-item label { display: block; font-weight: 600; margin-bottom: 6px; color: #475569; font-size: 0.9rem; }
    .filter-item.checkbox-item { display: flex; align-items: center; min-width: auto; }
    .filter-item.checkbox-item label { display: flex; align-items: center; gap: 6px; margin: 0; cursor: pointer; font-weight: 500; }
    .filter-item.checkbox-item input[type="checkbox"] { width: 18px; height: 18px; cursor: pointer; }
    .form-control { width: 100%; padding: 10px 14px; border-radius: 8px; border: 1px solid #cbd5e1; background: white; color: #1e293b; font-size: 0.95rem; transition: all 0.2s; }
    .form-control:focus { outline: none; border-color: #60a5fa; box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1); }
    .filter-actions { display: flex; gap: 10px; }
    .btn-apply { background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: white; border: none; padding: 10px 20px; border-radius: 8px; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 6px; transition: all 0.2s; }
    .btn-apply:hover { transform: translateY(-1px); box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3); }
    .btn-clear { background: white; color: #64748b; border: 2px solid #e2e8f0; padding: 8px 20px; border-radius: 8px; font-weight: 600; text-decoration: none; display: flex; align-items: center; gap: 6px; transition: all 0.2s; }
    .btn-clear:hover { background: #f8fafc; border-color: #cbd5e1; color: #475569; }

    /* TABLE */
    .table-container { background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.06); border: 1px solid #e2e8f0; }
    .status-table { width: 100%; border-collapse: collapse; }
    .status-table thead { background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); }
    .status-table th { padding: 16px; text-align: left; font-weight: 600; color: #475569; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; border-bottom: 2px solid #e2e8f0; }
    .status-table td { padding: 14px 16px; border-bottom: 1px solid #f1f5f9; vertical-align: middle; }
    .status-table tbody tr { transition: all 0.15s; }
    .status-table tbody tr:hover { background: #f8fafc; }
    .status-table tbody tr.deleted-row { background: #fef2f2; opacity: 0.8; }
    .status-table tbody tr.deleted-row:hover { background: #fee2e2; }
    .badge { padding: 5px 10px; border-radius: 6px; font-size: 0.85rem; font-weight: 600; }
    .badge-info { background: #dbeafe; color: #1e40af; }
    .badge-success { background: #dcfce7; color: #166534; }
    .badge-danger { background: #fee2e2; color: #991b1b; }
    .operator-count { background: #f1f5f9; color: #1e293b; padding: 4px 12px; border-radius: 6px; font-weight: 600; font-size: 0.9rem; display: inline-block; }
    .text-center { text-align: center; }
    .text-end { text-align: right; }
    .text-muted { color: #94a3b8; }
    .action-btns { display: flex; gap: 8px; justify-content: flex-end; }
    .btn-action { padding: 8px 12px; border: none; border-radius: 6px; cursor: pointer; transition: all 0.2s; display: inline-flex; align-items: center; justify-content: center; text-decoration: none; }
    .btn-edit { background: #dbeafe; color: #1e40af; }
    .btn-edit:hover { background: #bfdbfe; transform: translateY(-1px); }
    .btn-delete { background: #fee2e2; color: #991b1b; }
    .btn-delete:hover { background: #fecaca; transform: translateY(-1px); }
    .btn-restore { background: #dcfce7; color: #166534; }
    .btn-restore:hover { background: #bbf7d0; transform: translateY(-1px); }
    .btn-hard-delete { background: #fef2f2; color: #7f1d1d; border: 2px solid #fee2e2; }
    .btn-hard-delete:hover { background: #fee2e2; }
    .empty-message { text-align: center; padding: 60px 20px; color: #94a3b8; }
    .empty-message i { font-size: 3rem; display: block; margin-bottom: 15px; }
    .empty-message p { margin: 5px 0 0 0; font-size: 1rem; }

    /* RESULT SUMMARY */
    .result-summary { margin-top: 20px; padding: 15px 0; color: #64748b; font-size: 0.95rem; }
    .result-summary strong { color: #1e293b; }

    /* RESPONSIVE */
    @@media (max-width: 1400px) {
        .status-table { font-size: 0.9rem; }
        .status-table th, .status-table td { padding: 12px; }
    }
    @@media (max-width: 768px) {
        .status-management-container { padding: 20px; }
        .page-header { flex-direction: column; align-items: flex-start; gap: 15px; }
        .filter-row { flex-direction: column; align-items: stretch; }
        .filter-item { width: 100%; }
        .table-container { overflow-x: auto; }
    }
</style>
