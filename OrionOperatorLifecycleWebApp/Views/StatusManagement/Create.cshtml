    }

    .form-actions .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }
</style>
